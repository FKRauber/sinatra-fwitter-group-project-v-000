<h1>Sign Up</h1>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<form method="POST" action='/signup'>
  <label>Name:</label><input type="text" name="name"></input>
  <label>Email:</label><input type="text" name="email"></input>
  <label>Password:</label><input type="text" name="password"></input>
  <input class="btn btn-primary" type="submit" value="Sign Up"></input>
</form>
